<h1 class="text-center mb-3">{{title}}</h1>

<form action="/api/members" method="POST" class="mb-4">

    <div class="form-group">
        <label for="name">Name</label>
        <input style="background-color: rgb(136, 175, 136);" type="text" name="name" class="form-control">
    </div>

    <div class="form-group">
        <label for="address">Address</label>
        <input style="background-color: rgb(136, 175, 136);" type="text" name="address" class="form-control">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input style="background-color: rgb(136, 175, 136);" type="email" name="email" class="form-control">
    </div>
    <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>

<h4>Members</h4>

<ul class="list-group">
    {{#each members}}
    <li style="background-color:mediumaquamarine;" class="list-group-item">Name: {{this.name}}
        &emsp;&emsp;&emsp;&emsp;&emsp;
        &emsp;&emsp; Address:
        {{this.address}}<br>Email: {{this.email}}</li><br>
    {{/each}}<br>
</ul>

<div style="text-align: center;">
    <a href="/api/members" class="btn btn-warning mt-4 mb-3 btn-block">Visit API</a>
</div>